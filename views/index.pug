extends layout.pug
block body
    if(authenticated)
        div(class="container")
            table(class="table")
                thead
                    tr
                        th Emne
                        th Kategori
                        th Dato
                        th Initialer
                        th LÃ¦st
                tbody#snytOversigt
                    if data
                        each snyt in data
                            tr.clickableRow(data-href=snyt._id onclick='gotoSnyt(this)')
                                td #{snyt.subject}
                                td #{snyt.category}
                                td #{snyt.created.toLocaleDateString()}
                                td #{snyt.user}
                                if ( snyt.readBy.indexOf(me._id) > 0 )
                                    td  X
                                else
                                    td

    else
        //Hvis man ikke er logget ind kommer det her:
        h1 SNYT++
        form(action="/", method="POST")
            fieldset
                p
                    label Email
                    input(name="user[email]", type="text", value=signupEmail)
                p
                    label Password
                    input(name="user[password]", type="password")
                p
                    button(type="submit" class="btn btn-primary") Log Ind
