extends layout.pug
block body
    if(authenticated)
        div(class="row")
            div(class="col-2")
                fieldset
                ul(type="none")
                    li
                        a(href="/kvitoversigt")
                            button(type="button" class="btn btn-primary") Gå tilbage
                    li
                        a(href="/snyt/" + snyt.id)
                            button(type="button" class="btn btn-primary") Gå til SNYT
                    li
                    a(name="snyt[edok]" href=snyt.edok) e-Dok
                    li
                    label Dato
                        input(type="text" name="snyt[created]" value=snyt.created.toLocaleDateString() disabled=true)
                    li
                    label Initialer
                        input(type="text" name="snyt[user]", value=snyt.user disabled = true)
                    li
                    label Kategori
                        input(type="text" name="snyt[category]" value=snyt.category disabled = true)

            div(class="col-7")
                ul(type="none")
                    li
                        input(type="text" name="snyt[subject]" value=snyt.subject disabled = true)
                    li
                        textarea(rows="20" cols="150" disabled = true name="snyt[text]").form-control=snyt.text

            .col-3
                input#kvitListJ(hidden value=snyt.readBy)
                ul(type="none")
                    li
                        input(type="text" value="Mangler at læsekvittere" disabled = true)
                ul#kvitList(type="none")
                    each user in users
                        li #{user.first} #{user.last} (#{user.initials})



