                            button.btn.btn-primary(type='button') Opret
            br

            if !errors
                ul(class="list-group")
                    each user in allUsers
                        li
                            a.list-group-item.list-group-item-action(href="/admin")  #{user.first} #{user.last}  (#{user.initials})
                        br
        else
            nav(class="navbar navbar-expand-lg navbar-light bg-light")
                a(class="navbar-brand" href="/") ADMIN LOGIN
                button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                    span(class="navbar-toggler-icon")
            br
            form(action="/admin/login", method="POST")
                fieldset
                    p
                        label Brugernavn
                        input(name="adminUsername", type="text")
                    p
                        label Adgangskode
                        input(name="adminPassword", type="password")
                    p
                        button(type="submit" class="btn btn-primary") Log Ind


