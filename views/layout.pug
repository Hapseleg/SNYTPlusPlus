doctype html
html
    head
        title SNYT++
        link(
        rel="stylesheet"
        href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css"
        )
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
        script(src='js/clientJs.js')
        script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous")
    body
        //https://getbootstrap.com/docs/4.0/components/navbar/
        nav(class="navbar navbar-expand-lg navbar-light bg-light")
            a(class="navbar-brand" href="#") SNYT++
            button(class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
                span(class="navbar-toggler-icon")

            div(class="collapse navbar-collapse" id="navbarSupportedContent")
                ul(class="navbar-nav mr-auto")
                    li(class="nav-item active"): a(class="nav-link" href="#") Home
                        span(class="sr-only") Current
                    li(class="nav-item"): a(class="nav-link" href="#") Opret SNYT
                    li(class="nav-item"): a(class="nav-link" href="#") Læsekvittering oversigt

                form(class="form-inline my-2 my-lg-0")
                    input(class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search")
                    button(class="btn btn-outline-success my-2 my-sm-0" type="submit") Search

                form(class="form-inline my-2 my-lg-0")
                    button(type="button" class="btn btn-primary" data-toggle="modal" data-target="#advancedSearch") Flere søgemuligheder

                ul(class="navbar-nav")
                    //li(class="nav-item"): a(class="nav-link" href="#") Flere søgemuligheder
                    li(class="nav-item dropdown")
                        a(class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") BRUGERNAVN
                        div(class="dropdown-menu" aria-labelledby="navbarDropdown")
                            a(class="dropdown-item" href="#") link1
                            a(class="dropdown-item" href="#") link2

        //https://getbootstrap.com/docs/4.0/components/modal/
        div(class="modal" tabindex="-1" role="dialog" id="advancedSearch")
            div(class="modal-dialog" role="document")
                div(class="modal-content")
                    div(class="modal-header")
                        h5(class="modal-title") Avanceret Søgning
                        button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                            span(aria-hidden="true") &times;
                    div(class="modal-body")
                        form(id="advSearch")
                            label(for="advCategory") Kategori
                            br
                            select(id="advCategory")
                                option(value="" selected="true")
                                option(value="ac") AC
                                option(value="logistik") Logistik
                                option(value="tovholder") Tovholder
                                option(value="hygiejne") Hygiejne
                                option(value="levering") Levering
                                option(value="reklamation") Reklamation
                                option(value="it") IT
                                option(value="klinisk") Klinisk Forsøg
                                option(value="produktion") Produktion
                            br
                            br
                            label(for="advText") Søgeord
                            br
                            input#advText(type="text")
                            br
                            br
                            table#advDateTable
                                tr
                                    th Dato Fra
                                    th Dato Til
                                tr
                                    td
                                        input#advDateFrom(type="date")
                                    td
                                        input#advDateTo(type="date")
                            br
                            br

                            input#advRadio1(type="radio" name="advRadioButtons" value="true" style="margin-right: 10px")
                            label(for="advRadio1") Læsekvitteret
                            br
                            input#advRadio2(type="radio" name="advRadioButtons" value="false" style="margin-right: 10px")
                            label(for="advRadio2") Ikke Læsekvitteret
                            br
                            input#advRadio3(type="radio" name="advRadioButtons" style="margin-right: 10px" checked="checked")
                            label(for="advRadio3") Alle
                            br

                    div(class="modal-footer")
                        button(type="button" class="btn btn-primary") Søg
                        button(type="button" class="btn btn-secondary" data-dismiss="modal") Luk




        block body