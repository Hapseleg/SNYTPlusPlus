extends layout.pug
block body
    if(authenticated)
        form(action="/opretsnyt", method="POST")
            div(class="row")
                div(class="col-2")
                    fieldset
                    ul(type="none")
                        li
                            a(href="/")
                                button(type="button" class="btn btn-primary") Gå tilbage
                        li
                        label e-Dok
                            input(type="text" name="snyt[edok]")
                        li
                        label Dato
                            input#advDateFrom(type="date" name="snyt[created]" value=date)
                        li
                        label Initialer
                            input(type="text" name="snyt[user]" disabled="disabled" value=me.initials)
                        li
                        label Kategori
                            //input(type="text" name="snyt[category]")
                            select(name="snyt[category]")
                                //TODO value="ac" -> value="AC"???
                                option(value="ac") AC
                                option(value="Logistik") Logistik
                                option(value="Tovholder") Tovholder
                                option(value="Hygiejne") Hygiejne
                                option(value="Levering") Levering
                                option(value="Reklamation") Reklamation
                                option(value="IT") IT
                                option(value="Klinisk Forsøg") Klinisk Forsøg
                                option(value="Produktion") Produktion


                        li
                            button(type="submit" class="btn btn-primary") Gem


                div(class="col-10")
                    ul(type="none")
                        li
                            input(type="text" name="snyt[subject]" style="width: 1073px;")
                        li
                            textarea(name="snyt[text]" rows="20" cols="150")